<?xml version="1.0" encoding="UTF-8"?>
<config>
  <!-- Uncomment this if you have PEAR Log installed
  <log>
    <type>file</type>
    <name>/var/log/propel.log</name>
    <ident>propel-TotalDefense</ident>
    <level>7</level>
  </log>
  -->
  <propel>
    <datasources default="TotalDefense">
      <datasource id="TotalDefense">
        <adapter>mysql</adapter> <!-- sqlite, mysql, mssql, oracle, or pgsql -->
        <connection>
          <dsn>mysql:host=localhost;dbname=TotalDefense</dsn>
          <user>root</user>
          <password>jdmac</password>
          <settings>
			<setting id="charset">utf8</setting>
		  </settings>
		  <options>
			<option id="MYSQL_ATTR_INIT_COMMAND">SET NAMES utf8 COLLATE utf8_german2_ci</option>
		  </options>
        </connection>
      </datasource>
    </datasources>
  </propel>
</config>
